    int point_honneur = 0; 
    
    
     for(int i = 0 ; i < 13 ; i++ ){
       System.out.println("Entrer la carte " + (i +1) + " A, R, D, V, X, 9, 8, 7, 6, 5, 4, 3, 2" ); 
       color = Clavier.lireString(); 
       value = Clavier.lireString(); 
       
       switch(value){
       case "A": point_honneur += 4; 
       break; 
       case "R": point_honneur += 3; 
       break; 
       case "D" :point_honneur += 2; 
