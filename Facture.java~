public class Facture
{
  public static void main(String args[])
  {
    final double tremise = 0.04; 
    final int mremise = 25000;
    final int pp1 = 10, pp2 = 15, pp3 = 20; 
    final double tva1 = 0.06, tva2 = 0.21; 
    
    
    int qp1, qp2, qp3; 
    double ttva1, ttva2, ttva3;
    double mhtva; 
    double mtvac, a_payer, rist; 
    
    
    System.out.println("Entrez les 3 quantités:"); 
    qp1= Clavier.lireInt(); 
    mhtv = qp1*pp1 + qp2*pp2 + qp3*pp3;
    tva1 = (qp1*pp1)* ttva1;
    tva2 =(qp2*pp2)*ttva2;
    tva3 =(qp3*pp3)*ttva3;
    mtvac = mhtvac + tva2 + tva3; 
    
    if(mtvac > mremise)
      rist = mtvac *tremise; 
    else rist = 0; 
    a_payer = mtvac - rist; 
    
    System_out.println("mhtva: "+ mhtva); 
  }
}
    
      